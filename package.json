{
    "name": "vascode-mcp-wrapper",
    "displayName": "Internal DB Tools",
    "version": "0.0.1",
    "publisher": "internal-dev",
    "repository": {
        "type": "git",
        "url": "https://github.com/internal/vscode-mcp-wrapper.git"
    },
    "engines": {
        "vscode": "^1.101.0"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "languageModelTools": [
            {
                "id": "mcp-tools",
                "name": "MCP Tools",
                "description": "Tools from MCP servers"
            }
        ],
        "commands": [
            {
                "command": "mcp-wrapper.reconnect",
                "title": "MCP: Reconnect to Server",
                "category": "MCP"
            },
            {
                "command": "mcp-wrapper.showStatus",
                "title": "MCP: Show Server Status",
                "category": "MCP"
            },
            {
                "command": "mcp-wrapper.listTools",
                "title": "MCP: List Available Tools",
                "category": "MCP"
            },
            {
                "command": "mcp-wrapper.openToolPicker",
                "title": "MCP: Open Tool Picker",
                "category": "MCP"
            },
            {
                "command": "mcp-wrapper.testTool",
                "title": "MCP: Test Tool",
                "category": "MCP"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "mcp-wrapper.reconnect",
                    "when": "true"
                },
                {
                    "command": "mcp-wrapper.showStatus",
                    "when": "true"
                },
                {
                    "command": "mcp-wrapper.listTools",
                    "when": "true"
                },
                {
                    "command": "mcp-wrapper.openToolPicker",
                    "when": "true"
                },
                {
                    "command": "mcp-wrapper.testTool",
                    "when": "true"
                }
            ]
        },
        "configuration": {
            "title": "MCP Wrapper",
            "properties": {
                "mcpWrapper.servers": {
                    "type": "array",
                    "default": [],
                    "description": "MCP server configurations",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Unique name for the server"
                            },
                            "transport": {
                                "type": "string",
                                "enum": ["http", "sse", "stdio"],
                                "description": "Transport type for connecting to the server"
                            },
                            "url": {
                                "type": "string",
                                "description": "Server URL (required for http/sse transport)"
                            },
                            "command": {
                                "type": "string",
                                "description": "Command to run (required for stdio transport)"
                            },
                            "args": {
                                "type": "array",
                                "items": { "type": "string" },
                                "description": "Command arguments (for stdio transport)"
                            },
                            "authToken": {
                                "type": "string",
                                "description": "Authentication token (optional)"
                            },
                            "allowInsecure": {
                                "type": "boolean",
                                "default": false,
                                "description": "Allow insecure connections"
                            },
                            "timeout": {
                                "type": "number",
                                "default": 10000,
                                "description": "Connection timeout in milliseconds"
                            },
                            "retries": {
                                "type": "number",
                                "default": 3,
                                "description": "Number of connection retry attempts"
                            }
                                                },
                        "required": ["name", "transport"]
                    }
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p .",
        "watch": "tsc -watch -p .",
        "package": "npx @vscode/vsce package"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.15.0",
        "zod": "^3.23.0"
    },
    "devDependencies": {
        "@types/node": "^20.11.19",
        "@types/vscode": "^1.101.0",
        "@vscode/vsce": "^2.15.0",
        "typescript": "^5.4.0"
    }
}
