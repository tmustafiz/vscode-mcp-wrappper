{
    "name": "vscode-mcp-wrapper",
    "displayName": "Extension for MCP Wrapper",
    "version": "0.0.1",
    "publisher": "internal-dev",
    "repository": {
        "type": "git",
        "url": "https://github.com/tmustafiz/vscode-mcp-wrapper.git"
    },
    "engines": {
        "vscode": "^1.101.0"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "languageModelTools": [
            {
                "name": "list_schemas",
                "displayName": "list_schemas",
                "modelDescription": "List all available schemas in the database, excluding system schemas.",
                "description": "List all available schemas in the database, excluding system schemas.",
                "canBeReferencedInPrompt": true,
                "toolReferenceName": "list_schemas",
                "userDescription": "list_schemas",
                "inputSchema": {
                    "type": "object",
                    "properties": {},
                    "additionalProperties": false,
                    "$schema": "http://json-schema.org/draft-07/schema#"
                }
            },
            {
                "name": "list_tables",
                "displayName": "list_tables",
                "modelDescription": "List all tables in a schema. Requires a schema name (e.g., 'public').",
                "description": "List all tables in a schema. Requires a schema name (e.g., 'public').",
                "canBeReferencedInPrompt": true,
                "toolReferenceName": "list_tables",
                "userDescription": "list_tables",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "schema": {
                            "type": "string",
                            "description": "The name of the schema to list tables from (e.g., 'public')"
                        }
                    },
                    "required": [
                        "schema"
                    ],
                    "additionalProperties": false,
                    "$schema": "http://json-schema.org/draft-07/schema#"
                }
            },
            {
                "name": "list_columns",
                "displayName": "list_columns",
                "modelDescription": "List columns for a table. Requires both schema and table names.",
                "description": "List columns for a table. Requires both schema and table names.",
                "canBeReferencedInPrompt": true,
                "toolReferenceName": "list_columns",
                "userDescription": "list_columns",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "schema": {
                            "type": "string",
                            "description": "The name of the schema containing the table"
                        },
                        "table": {
                            "type": "string",
                            "description": "The name of the table to list columns from"
                        }
                    },
                    "required": [
                        "schema",
                        "table"
                    ],
                    "additionalProperties": false,
                    "$schema": "http://json-schema.org/draft-07/schema#"
                }
            },
            {
                "name": "generate_erd_mermaid",
                "displayName": "generate_erd_mermaid",
                "modelDescription": "Generate a Mermaid ERD diagram for the given schema.",
                "description": "Generate a Mermaid ERD diagram for the given schema.",
                "canBeReferencedInPrompt": true,
                "toolReferenceName": "generate_erd_mermaid",
                "userDescription": "generate_erd_mermaid",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "schema"
                    ],
                    "additionalProperties": false,
                    "$schema": "http://json-schema.org/draft-07/schema#"
                }
            },
            {
                "name": "generate_erd_json",
                "displayName": "generate_erd_json",
                "modelDescription": "Return the ERD as a JSON graph for the given schema.",
                "description": "Return the ERD as a JSON graph for the given schema.",
                "canBeReferencedInPrompt": true,
                "toolReferenceName": "generate_erd_json",
                "userDescription": "generate_erd_json",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "schema"
                    ],
                    "additionalProperties": false,
                    "$schema": "http://json-schema.org/draft-07/schema#"
                }
            },
            {
                "name": "fuzzy_column_match",
                "displayName": "fuzzy_column_match",
                "modelDescription": "Finds the best matching column in a table given a user keyword, using similarity and column comments.",
                "description": "Finds the best matching column in a table given a user keyword, using similarity and column comments.",
                "canBeReferencedInPrompt": true,
                "toolReferenceName": "fuzzy_column_match",
                "userDescription": "fuzzy_column_match",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "schema": {
                            "type": "string"
                        },
                        "table": {
                            "type": "string"
                        },
                        "keyword": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "schema",
                        "table",
                        "keyword"
                    ],
                    "additionalProperties": false,
                    "$schema": "http://json-schema.org/draft-07/schema#"
                }
            },
            {
                "name": "sample_column_data",
                "displayName": "sample_column_data",
                "modelDescription": "Get sample data values from a column for data inspection.",
                "description": "Get sample data values from a column for data inspection.",
                "canBeReferencedInPrompt": true,
                "toolReferenceName": "sample_column_data",
                "userDescription": "sample_column_data",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "schema": {
                            "type": "string"
                        },
                        "table": {
                            "type": "string"
                        },
                        "column": {
                            "type": "string"
                        },
                        "limit": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "schema",
                        "table",
                        "column"
                    ],
                    "additionalProperties": false,
                    "$schema": "http://json-schema.org/draft-07/schema#"
                }
            },
            {
                "name": "find_related_tables",
                "displayName": "find_related_tables",
                "modelDescription": "Find related tables for the specified table using FK constraints.",
                "description": "Find related tables for the specified table using FK constraints.",
                "canBeReferencedInPrompt": true,
                "toolReferenceName": "find_related_tables",
                "userDescription": "find_related_tables",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "schema": {
                            "type": "string"
                        },
                        "table": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "schema",
                        "table"
                    ],
                    "additionalProperties": false,
                    "$schema": "http://json-schema.org/draft-07/schema#"
                }
            },
            {
                "name": "describe_relationship",
                "displayName": "describe_relationship",
                "modelDescription": "Describe the relationship between two tables in English.",
                "description": "Describe the relationship between two tables in English.",
                "canBeReferencedInPrompt": true,
                "toolReferenceName": "describe_relationship",
                "userDescription": "describe_relationship",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "schema": {
                            "type": "string"
                        },
                        "table1": {
                            "type": "string"
                        },
                        "table2": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "schema",
                        "table1",
                        "table2"
                    ],
                    "additionalProperties": false,
                    "$schema": "http://json-schema.org/draft-07/schema#"
                }
            },
            {
                "name": "run_query",
                "displayName": "run_query",
                "modelDescription": "Execute a SELECT query with safety measures",
                "description": "Execute a SELECT query with safety measures",
                "canBeReferencedInPrompt": true,
                "toolReferenceName": "run_query",
                "userDescription": "run_query",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "query": {
                            "type": "string",
                            "description": "The SELECT query to execute"
                        },
                        "clientId": {
                            "type": "string",
                            "description": "Unique identifier for rate limiting"
                        }
                    },
                    "required": [
                        "query",
                        "clientId"
                    ],
                    "additionalProperties": false,
                    "$schema": "http://json-schema.org/draft-07/schema#"
                }
            }
        ],
        "commands": [
            {
                "command": "mcp-wrapper.reconnect",
                "title": "MCP: Reconnect to Server",
                "category": "MCP"
            },
            {
                "command": "mcp-wrapper.showStatus",
                "title": "MCP: Show Server Status",
                "category": "MCP"
            },
            {
                "command": "mcp-wrapper.listTools",
                "title": "MCP: List Available Tools",
                "category": "MCP"
            },
            {
                "command": "mcp-wrapper.openToolPicker",
                "title": "MCP: Open Tool Picker",
                "category": "MCP"
            },
            {
                "command": "mcp-wrapper.testTool",
                "title": "MCP: Test Tool",
                "category": "MCP"
            },
            {
                "command": "mcp-wrapper.showAgentTools",
                "title": "MCP: Show Agent Tools",
                "category": "MCP"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "mcp-wrapper.reconnect",
                    "when": "true"
                },
                {
                    "command": "mcp-wrapper.showStatus",
                    "when": "true"
                },
                {
                    "command": "mcp-wrapper.listTools",
                    "when": "true"
                },
                {
                    "command": "mcp-wrapper.openToolPicker",
                    "when": "true"
                },
                {
                    "command": "mcp-wrapper.testTool",
                    "when": "true"
                },
                {
                    "command": "mcp-wrapper.showAgentTools",
                    "when": "true"
                }
            ]
        },
        "configuration": {
            "title": "MCP Wrapper",
            "properties": {
                "mcpWrapper.servers": {
                    "type": "array",
                    "default": [],
                    "description": "MCP server configurations",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Unique name for the server"
                            },
                            "transport": {
                                "type": "string",
                                "enum": [
                                    "http",
                                    "sse",
                                    "stdio"
                                ],
                                "description": "Transport type for connecting to the server"
                            },
                            "url": {
                                "type": "string",
                                "description": "Server URL (required for http/sse transport)"
                            },
                            "command": {
                                "type": "string",
                                "description": "Command to run (required for stdio transport)"
                            },
                            "args": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "description": "Command arguments (for stdio transport)"
                            },
                            "authToken": {
                                "type": "string",
                                "description": "Authentication token (optional)"
                            },
                            "allowInsecure": {
                                "type": "boolean",
                                "default": false,
                                "description": "Allow insecure connections"
                            },
                            "timeout": {
                                "type": "number",
                                "default": 10000,
                                "description": "Connection timeout in milliseconds"
                            },
                            "retries": {
                                "type": "number",
                                "default": 3,
                                "description": "Number of connection retry attempts"
                            }
                        },
                        "required": [
                            "name",
                            "transport"
                        ]
                    }
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p .",
        "watch": "tsc -watch -p .",
        "package": "npx @vscode/vsce package",
        "discover-tools": "node scripts/discover-and-update-tools.js",
        "precompile": "npm run discover-tools"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.15.0",
        "zod": "^3.23.0"
    },
    "devDependencies": {
        "@types/node": "^20.11.19",
        "@types/vscode": "^1.101.0",
        "@vscode/vsce": "^3.6.0",
        "typescript": "^5.4.0"
    }
}